<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_advance_request_inherit_form" model="ir.ui.view">
        <field name="name">account.advance.request.inherit.form</field>
        <field name="model">account.advance.request</field>
        <field name="inherit_id" ref="bione_thai_account.view_account_advance_request_form"/>
        <field name="arch" type="xml">
            <field name="title_id_advance" position="replace">
                <field name="title_id" string="วัตถุประสงค์ในการยืม" widget="selection"/>
            </field>
            <field name="contract_no_advance" position="replace">
                <field name="contract_no" create="false"/>
            </field>
        </field>
    </record>

    <record id="view_account_advance_inherit_form" model="ir.ui.view">
        <field name="name">account.advance.inherit.form</field>
        <field name="model">account.advance</field>
        <field name="inherit_id" ref="bione_thai_account.view_account_advance_form"/>
        <field name="arch" type="xml">
            <field name="title_id_advance" position="replace">
                <field name="title_id" string="วัตถุประสงค์ในการยืม" widget="selection"/>
            </field>
        </field>
    </record>
</odoo>
